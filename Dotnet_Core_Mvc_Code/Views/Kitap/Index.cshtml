@model List<Dotnet_Core_Mvc_Code.Modules.Kitaplar>
@{
    ViewData["Title"] = "Kitaplar";
}

<h1>Kitaplar</h1>




<table class="table">
  <thead>
    <tr>

      <th scope="col">Kitap ISBN</th>
      <th scope="col">Kitap Adı</th>
      <th scope="col">Yapılacak İşlem</th>
      <th> <a class="btn btn-sm btn-success" asp-action="Create">Yeni Kitap Türü Ekle EKle</a></th>
    </tr>
  </thead>
  <tbody>
      @foreach (var kitap in Model)
      {
          <tr>
      <td>@kitap.Isbn</td>
      <td>@kitap.Ad</td>
      <td>
          <a class="btn btn-sm btn-info" asp-action="Details" asp-route-Id="@kitap.Isbn">Detay</a>
          <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-Id="@kitap.Isbn">Düzenle</a>
          <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-Id="@kitap.Isbn">Sil</a>
      </td>
    </tr>
      }
    
  
  </tbody>
</table>