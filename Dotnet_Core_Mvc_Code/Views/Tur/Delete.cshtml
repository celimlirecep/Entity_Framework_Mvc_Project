@model Dotnet_Core_Mvc_Code.Modules.Turler
@{
    ViewData["Title"] = "Delete";
}
<h1> Kitap Türü Silme</h1>
<hr>

<div class="container">
<div class="card ">
  <div class="card-header">
    Kitap Tür Detayı
  </div>
  <div class="card-body">
    <h5 class="card-title">@Model.TurAd </h5>
    <p class="card-text">Id =@Model.Id</p>
    <a asp-action="index">Geri Dön</a>
  </div>
  <div class="card-footer text-muted">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Kitap Türünü Sil" class="btn btn-danger"/>
    </form>
  </div>
</div>
</div>