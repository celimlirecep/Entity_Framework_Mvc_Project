@model Dotnet_Core_Mvc_Code.Modules.Turler
@{
    ViewData["Title"] = "Edit";
}


<h1>Kitap Türü Düzenle</h1>
<hr>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div class="form-group">
                    <label class="control-label">Tur Id</label>
                    <label class="control-label" asp-for="Id">@Model.Id</label>
                    <hr>
                    <label class="control-label">Kitap Türü</label>
                    <input class="form-control" type="text" asp-for="TurAd">
                </div>
                <div class="form-group">
                    <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>